<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tasks.SimpleInterest">

    <TextView
        android:id="@+id/simpleInterestTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Simple Interest"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/inputTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:stretchColumns="0"
        app:layout_constraintBottom_toTopOf="@+id/simpleInterestBtn"
        app:layout_constraintEnd_toEndOf="@+id/simpleInterestTitle"
        app:layout_constraintStart_toStartOf="@+id/simpleInterestTitle"
        app:layout_constraintTop_toBottomOf="@+id/simpleInterestTitle">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/principalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principal:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/prinicpalEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="10000.00"
                android:inputType="numberDecimal"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/timeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="5 (years)"
                android:inputType="number"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rateEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="5.5%"
                android:inputType="numberDecimal"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/simpleInterestBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:onClick="onSimpleInterestCalculateBtnClicked"
        android:text="Calculate Interest"
        app:layout_constraintEnd_toEndOf="@+id/simpleInterestTitle"
        app:layout_constraintStart_toStartOf="@+id/simpleInterestTitle"
        app:layout_constraintTop_toBottomOf="@+id/inputTable" />

    <TextView
        android:id="@+id/simpleInterestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:hint="Result"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/simpleInterestTitle"
        app:layout_constraintStart_toStartOf="@+id/simpleInterestTitle"
        app:layout_constraintTop_toBottomOf="@+id/simpleInterestBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>